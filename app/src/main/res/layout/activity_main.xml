<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:stretchColumns="1,2,3,4">

    <TableRow>
        <TextView android:id="@+id/inputResultado" android:text="@string/textoInicio" android:layout_span="4" style="@style/TextoPrincipal"></TextView>
    </TableRow>
    <TableRow>
        <Button android:id="@+id/buttonClear" android:text="@string/buttonClear" style="@style/ButtonColorN"></Button>
        <Button android:id="@+id/buttonSigno" android:text="@string/buttonSigno" style="@style/ButtonColorN"></Button>
        <Button android:id="@+id/buttonPorcentaje" android:text="%" style="@style/ButtonColorN"></Button>
        <Button android:id="@+id/buttonDivide" android:text="/" style="@style/ButtonColorN"></Button>
    </TableRow>
    <TableRow>
        <Button android:id="@+id/button7" android:text="7" style="@style/ButtonColorA"></Button>
        <Button android:id="@+id/button8" android:text="8" style="@style/ButtonColorA"></Button>
        <Button android:id="@+id/button9" android:text="9" style="@style/ButtonColorA"></Button>
        <Button android:id="@+id/buttonMultiplicacion"  android:text="X" style="@style/ButtonColorN"></Button>
    </TableRow>

    <TableRow>
        <Button android:id="@+id/button4" android:text="4" style="@style/ButtonColorA"></Button>
        <Button android:id="@+id/button5" android:text="5" style="@style/ButtonColorA"></Button>
        <Button android:id="@+id/button6" android:text="6" style="@style/ButtonColorA"></Button>
        <Button android:id="@+id/buttonMenos"  android:text="-" style="@style/ButtonColorN"></Button>
    </TableRow>

    <TableRow>
        <Button android:id="@+id/button1" android:text="1" style="@style/ButtonColorA"></Button>
        <Button android:id="@+id/button2" android:text="2" style="@style/ButtonColorA"></Button>
        <Button android:id="@+id/button3" android:text="3" style="@style/ButtonColorA"></Button>
        <Button android:id="@+id/buttonMas" android:text="+" style="@style/ButtonColorN"></Button>
    </TableRow>

    <TableRow>

        <Button android:id="@+id/button0" style="@style/ButtonColorBoton0"  android:text="0"></Button>
        <Button android:id="@+id/buttonComa" style="@style/ButtonColorN" android:text=","></Button>
        <Button android:id="@+id/buttonIgual" style="@style/ButtonColorN" android:text="="></Button>
    </TableRow>
</TableLayout>